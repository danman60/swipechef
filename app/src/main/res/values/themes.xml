<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SwipeChef" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/swipe_purple</item>
        <item name="colorPrimaryVariant">@color/swipe_purple_dark</item>
        <item name="colorSecondary">@color/swipe_accent</item>

        <!-- Surface Colors -->
        <item name="android:colorBackground">@color/gray_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/error</item>

        <!-- Text on Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/swipe_purple_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Custom ActionBar/Toolbar style -->
    <style name="SwipeChefToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/swipe_purple</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/SwipeChefToolbarTheme</item>
    </style>

    <style name="SwipeChefToolbarTheme" parent="ThemeOverlay.Material3.Dark">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Bottom Navigation Style for WCAG AA Contrast -->
    <style name="SwipeChefBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/gray_900</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="android:elevation">8dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Pioneer Needles Card Header Chip Style -->
    <style name="SwipeChefChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipSpacing">8dp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SwipeChefChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/swipe_purple_light</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>
</resources>