<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/planMealsFragment">

    <fragment
        android:id="@+id/planMealsFragment"
        android:name="com.swipechef.app.ui.planning.PlanMealsFragment"
        android:label="Plan Meals"
        tools:layout="@layout/fragment_plan_meals">

        <action
            android:id="@+id/action_plan_to_chosen"
            app:destination="@id/chosenMealsFragment" />

        <action
            android:id="@+id/action_plan_to_detail"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/chosenMealsFragment"
        android:name="com.swipechef.app.ui.chosen.ChosenMealsFragment"
        android:label="Chosen Meals"
        tools:layout="@layout/fragment_chosen_meals">

        <action
            android:id="@+id/action_chosen_to_detail"
            app:destination="@id/recipeDetailFragment" />

        <action
            android:id="@+id/action_chosen_to_grocery"
            app:destination="@id/groceryListFragment" />
    </fragment>

    <fragment
        android:id="@+id/groceryListFragment"
        android:name="com.swipechef.app.ui.grocery.GroceryListFragment"
        android:label="Grocery List"
        tools:layout="@layout/fragment_grocery_list">

        <argument
            android:name="grocery_list_id"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.swipechef.app.ui.detail.RecipeDetailFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_detail">

        <argument
            android:name="recipe_id"
            app:argType="string" />
    </fragment>

</navigation>