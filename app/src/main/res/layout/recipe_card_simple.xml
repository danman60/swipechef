<?xml version="1.0" encoding="utf-8"?>
<com.swipechef.app.ui.views.SwipeableRecipeCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Pioneer Needles Card Header -->
        <include
            android:id="@+id/cardHeader"
            layout="@layout/card_header_pioneer_needles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="Recipe image"
            tools:src="@color/gray_200" />

        <!-- Recipe Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white">

            <!-- Recipe Description -->
            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Classic Italian pasta dish with eggs, cheese, and pancetta" />

            <!-- Recipe Meta Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Cook Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/cookTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="20 min" />

                </LinearLayout>

                <!-- Servings -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👥"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/servings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="4 servings" />

                </LinearLayout>

                <!-- Difficulty -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊"
                        android:textSize="16sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="Medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Swipe Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Swipe right to choose • Swipe left to skip"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:gravity="center"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</com.swipechef.app.ui.views.SwipeableRecipeCard>